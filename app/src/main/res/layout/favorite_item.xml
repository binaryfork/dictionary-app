<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="8dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/translation_layout_width"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/listTitleTv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:gravity="bottom|start"
            android:maxLines="1"
            android:textAppearance="@style/BlackText.16" />

        <TextView
            android:id="@+id/listTranslatedTv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/listTitleTv"
            android:ellipsize="end"
            android:gravity="top|start"
            android:maxLines="1"
            android:textAppearance="@style/AccentText.16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/listLangsTv"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/colorNormal"
        tools:text="EN\nRU" />

    <ImageView
        android:id="@+id/listFavoriteIv"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_star_selected" />
</LinearLayout>
